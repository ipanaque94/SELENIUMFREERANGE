pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clona tu repo desde GitHub
                git branch: 'main', url: 'https://github.com/ipanaque94/SELENIUMFREERANGE.git'
            }
        }

        stage('Build') {
            steps {
                // En Windows usa gradlew.bat
                bat 'gradlew.bat clean build'
            }
        }

        stage('Test') {
            steps {
                bat 'gradlew.bat test -Dcucumber.options="--tags @Courses"'
            }
        }

        stage('Report') {
            steps {
                junit 'build/test-results/test/*.xml'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Desplegando aplicación...'
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminado (éxito o fallo).'
        }
        success {
            echo 'Pipeline completado con éxito ✅'
        }
        failure {
            echo 'Pipeline falló ❌'
        }
    }
}